[user]
	name = {{ .name.full }}
	email = {{ .email }}
	signingkey = A6F6DB7CB772F1A0
[core]
	editor = vim
	excludesfile = ~/.config/git/gitignore
	autocrlf = input
[color]
	status = auto
	branch = auto
	interactive = auto
	diff = auto
[commit]
	gpgsign = true
{{- if eq .chezmoi.os "windows" }}
[core]
    sshCommand = 'C:\\Program Files\\OpenSSH-Win64\\ssh.exe'
[gpg]
    program = C:\\Program Files (x86)\\GnuPG\\bin\\gpg.exe
{{- end }}
[push]
    default = simple
    rebase = false
[pull]
# 	rebase = false
[alias]
    cleanup = "!git branch --merged | rg -v '^\\*|master|develop|main|test|production' | xargs -n1 -r git branch -d"
    update = "!git checkout develop && git pull && git cleanup"
[init]
	defaultBranch = main
[submodule]
	recurse = true

[includeIf "gitdir:~/Projects/Q42/"]
    path = q42.config
[includeIf "gitdir:~/Projects/InThere/"]
    path = inthere.config
[includeIf "gitdir:~/Projects/WesleyKlop/"]
    path = wesleyklop.config
