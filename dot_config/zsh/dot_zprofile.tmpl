# General configuration
export LC_CTYPE=en_US.UTF-8
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

export EDITOR="vim"
export VISUAL="vim"
export MANPAGER="sh -c 'col -bx | batcat -l man -p'"

# GnuPG configuration
export GNUPGHOME="$HOME/.local/gnupg"

# Platform.io configuration
export PLATFORMIO_CORE_DIR="$HOME/.local/platform.io"

# Rust configuration
export RUSTUP_HOME="$HOME/.local/rustup"
export CARGO_HOME="$HOME/.local/cargo"

# PHP configuration
export COMPOSER_HOME="$HOME/.config/composer"

# Node configuration
export NVM_DIR="$HOME/.local/nvm"
export NPM_PACKAGES="$HOME/.local/node_modules"
export DENO_INSTALL="$HOME/.local/deno"
export DENO_INSTALL_ROOT="$HOME/.local/bin"

# Docker configuration
{{ if not .wsl }}
export DOCKER_CONFIG="$HOME/.config/docker"
{{ end }}
export COMPOSE_DOCKER_CLI_BUILD=1

# Shell configuration
export ADOTDIR="$HOME/.local/antigen"
export HISTFILE="$HOME/.cache/zsh_history"

# Less colors
export LESS_TERMCAP_mb=$'\E[1;31m'     # begin bold
export LESS_TERMCAP_md=$'\E[1;36m'     # begin blink
export LESS_TERMCAP_me=$'\E[0m'        # reset bold/blink
export LESS_TERMCAP_so=$'\E[01;44;33m' # begin reverse video
export LESS_TERMCAP_se=$'\E[0m'        # reset reverse video
export LESS_TERMCAP_us=$'\E[1;32m'     # begin underline
export LESS_TERMCAP_ue=$'\E[0m'        # reset underline

export LESS='--quit-if-one-screen --ignore-case --LONG-PROMPT --RAW-CONTROL-CHARS --HILITE-UNREAD --tabs=4 --no-init --window=-4'

# Command aliases
alias dirs="dirs -v"

alias artisan="php artisan"

alias top="htop"

alias diff='diff --color=auto'

alias grep='rg'

alias ip='ip -color=auto'

alias ls='ls --color=auto' 

# Path as an array for readability
path=(
    "$CARGO_HOME/bin"
    "$COMPOSER_HOME/vendor/bin"
{{ if (eq .chezmoi.os "darwin") }}
    "/usr/local/opt/bash/bin"
    "/usr/local/opt/grep/libexec/gnubin"
    "/usr/local/opt/findutils/libexec/gnubin"
    "/usr/local/opt/gnu-sed/libexec/gnubin"
    "/usr/local/MacGPG2/bin"
{{ end }}
    "$HOME/.local/share/bin"
    "$HOME/.local/bin"
    "/usr/local/bin"
    "/usr/bin"
    "/bin"
    "/usr/sbin"
    "/sbin"
)
typeset -U path
export PATH=$(IFS=":"; echo "${path[*]}")

{{/* vim: set filetype=zsh: */}}
