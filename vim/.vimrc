filetype off
filetype plugin indent on

set nocompatible
set number
set expandtab
set tabstop=4
set shiftwidth=4
set hidden
set hlsearch
set incsearch
set ignorecase
set smartcase
set nobackup
set noswapfile
set fileformats=unix,dos,mac
set showcmd
set shell=/bin/zsh
set ruler
set backspace=indent,eol,start

syntax on

let g:vim_markdown_folding_disabled = 1
